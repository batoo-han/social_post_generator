# Development Environment Configuration
# This is an EXAMPLE for development - DO NOT commit with real keys!

# ProxyAPI Configuration
OPENAI_API_KEY=your_proxyapi_key_here
OPENAI_BASE_URL=https://api.proxyapi.ru/openai/v1
OPENAI_MODEL=gpt-4.1-mini

# Application Configuration
PORT=8082
HOST=127.0.0.1
DEBUG=true
LOG_LEVEL=DEBUG

# CORS
ALLOWED_ORIGINS=http://localhost:8082,http://127.0.0.1:8082

# Rate Limiting (более мягкие для разработки)
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500

# Web Scraping
FETCH_TIMEOUT=30
MAX_PAGE_SIZE=5242880
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Logging
LOG_DIR=logs
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# Notifications
ADMIN_EMAIL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Security
SECRET_KEY=dev_secret_key_change_in_production

# Content Limits
MAX_POST_LENGTH=800
MIN_TEXT_LENGTH=100

